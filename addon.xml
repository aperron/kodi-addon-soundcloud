<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.soundcloud" name="SoundCloud" version="3.0.0" provider-name="jaylinski">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.future" version="0.16.0"/>
        <import addon="script.module.requests" version="2.4.3"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="de_DE">Soundcloud ist eine Online-Audio-Vertriebsplattform.</summary>
		<summary lang="en_GB">SoundCloud is an online audio distribution platform.</summary>
        <language></language>
        <platform>all</platform>
        <license>MIT</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=206635</forum>
        <website>https://soundcloud.com</website>
        <source>https://github.com/aperron/kodi-addon-soundcloud</source>
        <news>3.0.0 (2019-06-01)
[new] complete rewrite
[new] python 3.6 compatibility
[fix] use new SoundCloud API
        </news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
